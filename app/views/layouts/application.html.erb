<!DOCTYPE html>
<html>
  <head>
    <title>Digital.cv</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="container">
        <div class="header-logo">
          <h1 class="header-title"><%= link_to "Digital.cv", root_path %></h1>
        </div>
        <div class="header-nav">
          <% if current_user %>
            <%= link_to user_show(current_user), user_path(current_user) %> |
            <%= link_to 'Sign out', auth.sign_out_path, data: {method: :delete}, class: 'button button-light button-small' %>
          <% else %>
            <%= link_to 'Register', new_user_path, class: 'button button-light button-small' %>
            <%= link_to 'Sign in', auth.sign_in_path, class: 'button button-light button-small' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="content">
      <div class="container">
        <% if flash.any? %>
          <div class="content-wrapper buffer-both">
            <% flash.each do |name, message| %>
              <%= content_tag :div, message, class: "flash-#{name}" %>
            <% end %>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
